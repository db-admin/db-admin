    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceRoot}/assets/js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node",
            "program": "${workspaceRoot}\\app.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 5858
        }
    ]
}